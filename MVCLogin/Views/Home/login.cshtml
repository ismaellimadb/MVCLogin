
@model MVCLogin.Usuario
@{
    ViewBag.Title = "login";
}


<h2>login</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
    <div style="border:1px solid red">
        @ViewBag.Message
    </div>

    }

    <table>
        <tr>
            <td>@Html.LabelFor(a => a.Usuario1)</td>
            <td>@Html.TextBoxFor(a => a.Usuario1)</td>
            <td>@Html.ValidationMessageFor(a => a.Usuario1)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.Senha)</td>
            <td>@Html.PasswordFor(a => a.Senha)</td>
            <td>@Html.ValidationMessageFor(a => a.Senha)</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Login" /></td>
            <td></td>
        </tr>
        
    </table>
    }

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }

